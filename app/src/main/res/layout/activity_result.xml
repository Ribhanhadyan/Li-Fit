<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lime"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Result"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_classification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="Classification"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_result_classification"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="@+id/tv_result_classification"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_classification" />

    <TextView
        android:id="@+id/tv_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="BMI"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_result_bmi"
        app:layout_constraintStart_toStartOf="@+id/tv_result_bmi"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_bmi" />

    <TextView
        android:id="@+id/tv_underweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Underweight"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_classification"
        app:layout_constraintTop_toBottomOf="@+id/tv_classification" />

    <TextView
        android:id="@+id/tv_underweight_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:text="Below 18.5"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_underweight"
        app:layout_constraintTop_toBottomOf="@+id/tv_bmi" />

    <TextView
        android:id="@+id/tv_normal_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Normal Weight"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_underweight"
        app:layout_constraintTop_toBottomOf="@+id/tv_underweight" />

    <TextView
        android:id="@+id/tv_normal_weight_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="18.5-24.9"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_underweight_bmi"
        app:layout_constraintTop_toBottomOf="@+id/tv_underweight_bmi" />

    <TextView
        android:id="@+id/tv_overweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Over Weight"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_normal_weight"
        app:layout_constraintTop_toBottomOf="@+id/tv_normal_weight" />

    <TextView
        android:id="@+id/tv_overweight_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="25-29.9"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_normal_weight_bmi"
        app:layout_constraintTop_toBottomOf="@+id/tv_normal_weight_bmi" />

    <TextView
        android:id="@+id/tv_obese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Obese"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_overweight"
        app:layout_constraintTop_toBottomOf="@+id/tv_overweight" />

    <TextView
        android:id="@+id/tv_obese_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="30 and above"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_overweight_bmi"
        app:layout_constraintTop_toBottomOf="@+id/tv_overweight_bmi" />

    <TextView
        android:id="@+id/tv_class_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Class I"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_obese"
        app:layout_constraintTop_toBottomOf="@+id/tv_obese" />

    <TextView
        android:id="@+id/tv_class_i_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="30-34.9"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_obese_bmi"
        app:layout_constraintTop_toBottomOf="@+id/tv_obese_bmi" />

    <TextView
        android:id="@+id/tv_class_ii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Class II"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_class_i"
        app:layout_constraintTop_toBottomOf="@+id/tv_class_i" />

    <TextView
        android:id="@+id/tv_class_ii3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="35-39.9"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_class_i_bmi"
        app:layout_constraintTop_toBottomOf="@+id/tv_class_i_bmi" />

    <TextView
        android:id="@+id/tv_class_iii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Class III"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_class_ii"
        app:layout_constraintTop_toBottomOf="@+id/tv_class_ii" />

    <TextView
        android:id="@+id/tv_class_iii_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="40 and above"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_class_ii3"
        app:layout_constraintTop_toBottomOf="@+id/tv_class_ii3" />

    <TextView
        android:id="@+id/tv_classification_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="112dp"
        android:text="Classification"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />

    <TextView
        android:id="@+id/tv_bmi_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="112dp"
        android:text="BMI"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_classification_result"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="Gender :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Age :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gender" />

    <TextView
        android:id="@+id/tv_result_classification"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/hijau"
        android:gravity="center"
        android:padding="4dp"
        android:text="Normal"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_classification_result"
        app:layout_constraintStart_toStartOf="@+id/tv_classification_result"
        app:layout_constraintTop_toBottomOf="@+id/tv_classification_result" />

    <TextView
        android:id="@+id/tv_result_bmi"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/hijau"
        android:gravity="center"
        android:padding="4dp"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_bmi_result"
        app:layout_constraintStart_toStartOf="@+id/tv_bmi_result"
        app:layout_constraintTop_toBottomOf="@+id/tv_bmi_result" />

    <TextView
        android:id="@+id/tv_recom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Recomended For You"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_classification_result"
        app:layout_constraintTop_toBottomOf="@+id/tv_class_iii" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_height="164dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recom" />

</androidx.constraintlayout.widget.ConstraintLayout>