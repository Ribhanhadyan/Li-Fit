<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/tv_result_age"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/hijau"
        android:gravity="center"
        android:padding="4dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_age"
        app:layout_constraintTop_toTopOf="@+id/tv_age" />

    <TextView
        android:id="@+id/tv_result_gender"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/hijau"
        android:gravity="center"
        android:padding="4dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toEndOf="@+id/tv_age"
        app:layout_constraintTop_toTopOf="@+id/tv_gender" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Result"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_classification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="Classification"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_recom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_classification"
        app:layout_constraintVertical_bias="0.277" />

    <TextView
        android:id="@+id/tv_bmi"
        android:layout_width="37dp"
        android:layout_height="27dp"
        android:layout_marginEnd="76dp"
        android:text="BMI"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_recom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_classification"
        app:layout_constraintVertical_bias="0.279" />

    <TextView
        android:id="@+id/tv_underweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Underweight"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_classification"
        app:layout_constraintStart_toStartOf="@+id/tv_classification"
        app:layout_constraintTop_toBottomOf="@+id/tv_classification" />

    <TextView
        android:id="@+id/tv_underweight_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Below 18.5"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_bmi"
        app:layout_constraintStart_toStartOf="@+id/tv_bmi"
        app:layout_constraintTop_toBottomOf="@+id/tv_bmi" />

    <TextView
        android:id="@+id/tv_normal_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Normal Weight"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_underweight"
        app:layout_constraintTop_toBottomOf="@+id/tv_underweight" />

    <TextView
        android:id="@+id/tv_normal_weight_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="18.5-24.9"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_underweight_bmi"
        app:layout_constraintTop_toBottomOf="@+id/tv_underweight_bmi" />

    <TextView
        android:id="@+id/tv_overweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Obesse"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_normal_weight"
        app:layout_constraintTop_toBottomOf="@+id/tv_normal_weight" />

    <TextView
        android:id="@+id/tv_overweight_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="25-29.9"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_normal_weight_bmi"
        app:layout_constraintTop_toBottomOf="@+id/tv_normal_weight_bmi" />

    <TextView
        android:id="@+id/tv_classification_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Classification"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="Gender :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Age       :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gender" />

    <TextView
        android:id="@+id/tv_result_classification"
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@color/hijau"
        android:gravity="center"
        android:padding="4dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_classification_result"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/tv_classification_result"
        app:layout_constraintTop_toBottomOf="@+id/tv_classification_result"
        app:layout_constraintVertical_bias="0.002" />

    <TextView
        android:id="@+id/tv_recom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Recomended For You"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_classification" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="tv_classification" />

</androidx.constraintlayout.widget.ConstraintLayout>